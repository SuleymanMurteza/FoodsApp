<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navi"
    app:startDestination="@id/homePage">

    <fragment
        android:id="@+id/homePage"
        android:name="com.example.foodsapp.ui.fragments.HomePage"
        android:label="fragment_home_page"
        tools:layout="@layout/fragment_home_page" >
        <action
            android:id="@+id/goToCart"
            app:destination="@id/cartPage" />
        <action
            android:id="@+id/action_homePage_to_foodsDetail"
            app:destination="@id/foodsDetail" />
        <action
            android:id="@+id/action_homePage_to_favPage"
            app:destination="@id/favPage" />
    </fragment>
    <fragment
        android:id="@+id/cartPage"
        android:name="com.example.foodsapp.ui.fragments.CartPage"
        android:label="fragment_cart_page"
        tools:layout="@layout/fragment_cart_page" >
        <action
            android:id="@+id/goToHome"
            app:destination="@id/homePage" />
    </fragment>
    <fragment
        android:id="@+id/foodsDetail"
        android:name="com.example.foodsapp.ui.fragments.FoodsDetail"
        android:label="fragment_foods_detail"
        tools:layout="@layout/fragment_foods_detail" >
        <argument
            android:name="foodslist"
            app:argType="com.example.foodsapp.data.entity.Foods" />
    </fragment>
    <fragment
        android:id="@+id/favPage"
        android:name="com.example.foodsapp.ui.fragments.FavPage"
        android:label="fragment_fav_page"
        tools:layout="@layout/fragment_fav_page" >
        <action
            android:id="@+id/action_favPage_to_foodsDetail"
            app:destination="@id/foodsDetail" />
    </fragment>
</navigation>